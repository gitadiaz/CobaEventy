<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailsProfileActivity"
    android:background="#F0F0F0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white"
        android:layout_margin="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="32dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GITA DIAZ PANGESTI"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEO | Gmail"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="gitadiazp@gmail.com"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="082298176450"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Session History"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="4"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_arrow_right"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!--horizontal line-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="4"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_arrow_right"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!--horizontal line-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="4"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_arrow_right"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!--horizontal line-->
            <View
                android:id="@+id/horizontal_line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e6e6e6"/>
        </LinearLayout>

        <Button
            android:layout_width="190dp"
            android:layout_height="36dp"
            android:text="Log Out"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_redpink"
            />
    </LinearLayout>
</ScrollView>